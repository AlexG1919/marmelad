.main-svg-sprite
    display : none

.svg-icon
    display : inline-block
    width : $iconizer.width
    height : $iconizer.height
    fill : currentColor

    &__spinner
        fill : inherit
        width : inherit
        height : inherit
        animation-name : spinner
        animation-duration : .7s
        animation-iteration-count : infinite
        animation-timing-function : linear

    &__link
        vertical-align : top
        fill : inherit
        width : inherit
        height : inherit
