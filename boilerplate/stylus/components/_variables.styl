$textDarkColor  = #000;
$textLightColor = #fff;

$colorPrimary = #3E50B4;
$colorAccent  = #FF3F80;

$colors = {
    primary   : $colorPrimary,
    secondary : $colorAccent,
    bgc       : #fff,
    txtDark : {
        primary   : rgba($textDarkColor, .87),
        secondary : rgba($textDarkColor, .54),
        hint      : rgba($textDarkColor, .38),
        divider   : rgba($textDarkColor, .12)
    },
    txtLight : {
        primary   : rgba($textLightColor, 1),
        secondary : rgba($textLightColor, .7),
        hint      : rgba($textLightColor, .5),
        divider   : rgba($textLightColor, .12)
    }
}

$links = {
    default : #0054b9,
    hover   : #c00,
    active  : false,
    visited : false
}

$selection = {
    bgc   : $colors.primary,
    color : #fff
}

$placeholders = {
    normal : base-text-color,
    focus : transparent
}

$fonts = {
    base     : unquote('"Helvetica Neue", Helvetica, Arial, sans-serif'),
    headings : unquote('Georgia, serif')
}

$html = {
    family     : $fonts.base,
    weight     : 400,
    color      : $colors.txtDark.primary,
    fontSize   : 16px,
    lineHeight : 1.4,
    bgc        : $colors.bgc
}

$headings = {
    gutter    : base-gutter,
    family    : $fonts.headings,
    weight    : 700,
    color     : base-text-color,
    transform : none,
    size      : 34
}

aside-width-left  = 300px
aside-width-right = aside-width-left

base-gutter        = 15px
base-content-width = 1000px

base-font-family =  $fonts.base
base-font-size   = 16px
base-font-small  = (base-font-size / 100 * 80)
base-font-weight = 400
base-line-height = 1.4
base-text-color  = #333

controls_height = 36px
controls_radius = 3px

pathToFonts = '../assets/fonts'

breakpoints = {
    xs  : 480px,
    sm  : 600px,
    md  : 840px,
    hd  : 960px,
    lg  : 1280px,
    xlg : 1440px,
    fhd : 1600px
}

grid = {
    block   : w-grid,
    elem    : col,
    columns : 12,
    gutter  : 0,
    mods    : {
        demo : {
            gutter : 15
        }
    }
}

wp = {
    gallery : {
        columns : 9,
        gutter  : 15
    }
}

iconizer = {
    width  : 24px,
    height : 24px,
    fill   : #333
}

text-weight = {
    thin    : 100,
    light   : 300,
    regular : 400,
    medium  : 500,
    bold    : 700,
    black   : 900
}

blockquote = {
    gutter : base-gutter,
    border : {
        size  : 5px,
        color : $colors.primary
    },
    font : {
        size  : base-font-size,
        style : normal
    }
}

controls = {
    default : {
        bgc : #eee,
        color : base-text-color
    },
    brand : {
        bgc : $colors.primary,
        color : #fff
    },
    success : {
        bgc : #66bb6a,
        color : #fff
    },
    info : {
        bgc : #26c6da,
        color : #fff
    },
    warning : {
        bgc : #ffca28,
        color : #fff
    },
    danger : {
        bgc : #ff7043,
        color : #fff
    }
}
