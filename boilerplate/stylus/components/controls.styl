.m-btn,
.m-ctrl
    @extend .reset-control

    display inline-block
    vertical-align middle
    max-width 100%
    height : $controlsHeight
    line-height : $controlsHeight
    padding 0 15px
    border 1px solid transparent
    border-radius : $controlsRadius

.m-btn
    text-decoration none
    user-select none
    cursor pointer

    &.a
        text-shadow none
        text-decoration none

    &:hover,
    &:focus
        background-color darken(#fff, 3%)
        background-image none

    &:active
        background-color darken(#fff, 5%)

    &_demo
        text-transform capitalize

    for $mod in $controls

        &_{$mod}
            background-color : $controls[$mod].bgc
            color : $controls[$mod].color

            &:hover,
            &:focus
                background-color : darken($controls[$mod].bgc, 5%)

            &:active
                background-color : darken($controls[$mod].bgc, 10%)

            &.m-btn_ghost
                background-color transparent
                border-color : $controls[$mod].bgc

                if ($mod == 'default')
                    color : $textColor.primary
                else
                    color : darken($controls[$mod].bgc, 5%)


                &:hover,
                &:focus
                    background-color : darken($controls[$mod].bgc, 5%)
                    border-color : darken($controls[$mod].bgc, 5%)
                    color : $controls[$mod].color

                &:active
                    border-color : darken($controls[$mod].bgc, 10%)
                    background-color : darken($controls[$mod].bgc, 10%)
                    color : $controls[$mod].color

.m-ctrl
    color : $textColor.primary

    &_textarea
        padding 10px 15px
        height auto
        line-height : 26px
        rasize vertical

    for $mod in $controls

        &_{$mod}
            border-color : $controls[$mod].bgc

            &:hover,
            &:focus
                border-color : darken($controls[$mod].bgc, 10%)

            if ($mod == 'default')

                &::-webkit-input-placeholder
                    color : $textColor.primary
                &::-moz-placeholder
                    color : $textColor.primary
                &:-moz-placeholder
                    color : $textColor.primary
                &:-ms-input-placeholder
                    color : $textColor.primary
            else

                &::-webkit-input-placeholder
                    color : $controls[$mod].bgc
                &::-moz-placeholder
                    color : $controls[$mod].bgc
                &:-moz-placeholder
                    color : $controls[$mod].bgc
                &:-ms-input-placeholder
                    color : $controls[$mod].bgc
