/* shop2-pagelist */
shop2pagelist = {
	color: #333,
	bgColor : #333
}
.shop2-pagelist
	margin 15px 0
	padding 0
	list-style-type none

	li
		display inline-block
		vertical-align top
		margin 0 2px
		min-width 28px
		height 28px
		text-align center
		box-sizing border-box

		&.active-num
			background-color: shop2pagelist[bgColor]
			color #fff
		a,
		span
			display flex
			flex-direction column
			align-items center
		a
			padding 0 4px

			text-decoration none
			text-align center
			font-size 14px
			color: shop2pagelist[color];

			border: 1px solid shop2pagelist[bgColor]
			box-sizing border-box

			&:hover

				color #fff
				background-color: shop2pagelist[bgColor]

				.svg-icon
					fill #fff

	.svg-icon
		width 16px
		height 16px
